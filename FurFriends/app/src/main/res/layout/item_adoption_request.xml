<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_request_pet_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#572A12"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Gary" />

        <TextView
            android:id="@+id/tv_requester_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="#757575"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tv_request_pet_name"
            app:layout_constraintTop_toBottomOf="@id/tv_request_pet_name"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Requested by: Rahim" />

        <TextView
            android:id="@+id/tv_requester_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#757575"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tv_requester_name"
            app:layout_constraintTop_toBottomOf="@id/tv_requester_name"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Phone: 017XXXXXXXX" />

        <TextView
            android:id="@+id/tv_request_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="#bf592b"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tv_requester_phone"
            app:layout_constraintTop_toBottomOf="@id/tv_requester_phone"
            tools:text="Status: pending" />

        <Button
            android:id="@+id/btn_request_call"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Call"
            android:textColor="#572A12"
            android:backgroundTint="#edbea4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_request_status"
            app:layout_constraintEnd_toStartOf="@id/btn_request_approve" />

        <Button
            android:id="@+id/btn_request_approve"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="Approve"
            android:textColor="#572A12"
            android:backgroundTint="#edbea4"
            app:layout_constraintStart_toEndOf="@id/btn_request_call"
            app:layout_constraintTop_toBottomOf="@id/tv_request_status"
            app:layout_constraintEnd_toStartOf="@id/btn_request_reject" />

        <Button
            android:id="@+id/btn_request_reject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="Reject"
            android:textColor="#572A12"
            android:backgroundTint="#edbea4"
            app:layout_constraintStart_toEndOf="@id/btn_request_approve"
            app:layout_constraintTop_toBottomOf="@id/tv_request_status"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>

