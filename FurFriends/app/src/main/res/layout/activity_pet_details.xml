<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEEFE6"
    tools:context=".ui.pets.PetDetailsActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_pet_media"
        android:layout_width="0dp"
        android:layout_height="320dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="26dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_pet_images"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/item_pet_image_pager" />
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/iv_pet_back"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/status_pill_bg"
        android:padding="6dp"
        android:src="@drawable/ic_arrow_back"
        app:tint="#572A12"
        app:layout_constraintTop_toTopOf="@id/card_pet_media"
        app:layout_constraintStart_toStartOf="@id/card_pet_media" />

    <TextView
        android:id="@+id/tv_pet_status_pill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/status_pill_bg"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textColor="#572A12"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="@id/card_pet_media"
        app:layout_constraintStart_toStartOf="@id/card_pet_media"
        tools:text="Available" />

    <ImageView
        android:id="@+id/iv_pet_favorite"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/status_pill_bg"
        android:padding="6dp"
        android:src="@drawable/ic_favorite_outline"
        app:tint="#BF592B"
        app:layout_constraintTop_toTopOf="@id/card_pet_media"
        app:layout_constraintEnd_toEndOf="@id/card_pet_media" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_pet_details"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/card_pet_media"
        app:layout_constraintBottom_toTopOf="@id/btn_request_adoption"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tv_pet_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#572A12"
                android:textSize="26sp"
                android:textStyle="bold"
                tools:text="Gary" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#572A12"
                    app:chipBackgroundColor="#FFF1E8"
                    tools:text="1 year" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_breed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#572A12"
                    app:chipBackgroundColor="#FFF1E8"
                    tools:text="Golden" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#572A12"
                    app:chipBackgroundColor="#FFF1E8"
                    tools:text="20 kg" />

            </com.google.android.material.chip.ChipGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_location_pin"
                    app:tint="#BF592B"/>

                <TextView
                    android:id="@+id/tv_pet_detail_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="#8A6D5C"
                    tools:text="Stadtmitel, Essen (5km)"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="About"
                android:textColor="#572A12"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFF7F1">

                <TextView
                    android:id="@+id/tv_pet_detail_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="#8A6D5C"
                    tools:text="Lorem ipsum is simply dummy text of the printing and typesetting industry. Lorem ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."/>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_adoption_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="#BF592B"
                android:textSize="12sp"
                android:visibility="gone"
                tools:text="Status: pending" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFF7F1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Owner"
                        android:textColor="#572A12"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_owner_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="#572A12"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="Ahsan Rahman" />

                    <TextView
                        android:id="@+id/tv_owner_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="#8A6D5C"
                        tools:text="01700000000" />

                    <LinearLayout
                        android:id="@+id/ll_contact_actions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_call_owner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Call"
                            android:textColor="#572A12"
                            app:backgroundTint="#edbea4" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_whatsapp_owner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:text="WhatsApp"
                            android:textColor="#572A12"
                            app:backgroundTint="#edbea4" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_request_adoption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Request Adoption"
        android:textColor="#FFFFFF"
        app:backgroundTint="#BF592B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

