<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEEFE6"
    tools:context=".ui.mypets.MyPetsFragment">

    <TextView
        android:id="@+id/tv_my_pets_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="My Pets"
        android:textColor="#572A12"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_my_pets_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/chip_bg"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textColor="#572A12"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_my_pets_header"
        app:layout_constraintStart_toEndOf="@id/tv_my_pets_header"
        tools:text="3 active" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_pet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="New Post"
        android:textColor="#FFFFFF"
        app:backgroundTint="#BF592B"
        app:icon="@drawable/ic_add"
        app:iconTint="#FFFFFF"
        app:iconPadding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_my_pets_header"
        app:layout_constraintBottom_toBottomOf="@id/tv_my_pets_header" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_mypets"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        app:singleSelection="true"
        app:layout_constraintTop_toBottomOf="@id/tv_my_pets_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_my_pets_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Active"
            app:chipBackgroundColor="#FFF7F1"
            app:chipStrokeColor="#E9CBB8"
            app:chipStrokeWidth="1dp"
            app:checkedIconVisible="false"
            android:textColor="#572A12" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_my_pets_adopted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adopted"
            app:chipBackgroundColor="#FFF7F1"
            app:chipStrokeColor="#E9CBB8"
            app:chipStrokeWidth="1dp"
            app:checkedIconVisible="false"
            android:textColor="#572A12" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_my_pets_requests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requests"
            app:chipBackgroundColor="#FFF7F1"
            app:chipStrokeColor="#E9CBB8"
            app:chipStrokeWidth="1dp"
            app:checkedIconVisible="false"
            android:textColor="#572A12" />
    </com.google.android.material.chip.ChipGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_my_pets_location"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:paddingBottom="24dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/chip_group_mypets"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_my_pet"
        tools:itemCount="4" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_requests_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        app:cardBackgroundColor="#FFF7F1"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        app:layout_constraintTop_toBottomOf="@id/chip_group_mypets"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_requests_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adoption Requests"
                android:textColor="#572A12"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_requests_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Review adopters, approve or reject requests."
                android:textColor="#8A6D5C"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_requests_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="View Requests"
                android:textColor="#572A12"
                app:backgroundTint="#edbea4" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/pb_my_pets_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/chip_group_mypets"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/ll_my_pets_empty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/chip_group_mypets"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_my_pets_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No pets posted yet."
            android:textColor="#8A6D5C"
            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_empty_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Create Post"
            android:textColor="#FFFFFF"
            app:backgroundTint="#BF592B" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

