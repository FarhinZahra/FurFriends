<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEEFE6"
    android:fillViewport="true"
    tools:context=".ui.pets.UploadPetActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Header -->
        <ImageView
            android:id="@+id/iv_back_arrow_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_upload_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPLOAD"
            android:textColor="#bf592b"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_back_arrow_upload"
            app:layout_constraintBottom_toBottomOf="@id/iv_back_arrow_upload" />

        <!-- Pet Image -->
        <ImageView
            android:id="@+id/iv_pet_image_upload"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:background="#FFFFFF"
            android:src="@drawable/ic_pets" 
            app:layout_constraintTop_toBottomOf="@+id/iv_back_arrow_upload"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Pet Details Form -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_pet_image_upload"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/et_pet_name_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pet Name"/>

            <EditText
                android:id="@+id/et_pet_breed_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Breed"/>

            <EditText
                android:id="@+id/et_pet_age_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Age (e.g., 2 years)"/>

            <EditText
                android:id="@+id/et_pet_weight_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Weight (e.g., 15 kg)"/>

            <AutoCompleteTextView
                android:id="@+id/et_pet_location_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Location (Dhaka area)"/>

            <EditText
                android:id="@+id/et_pet_story_upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="About / Story"
                android:lines="4"
                android:gravity="top"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

